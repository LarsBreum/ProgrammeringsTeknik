import java.util.Random;
import se.lth.cs.pt.window.SimpleWindow;

public class TvåPaddor {
	public static void main(String[] args) {

		int dir1;
		int dir2;
		int stegL1;
		int stegL2;
		
		Random rand = new Random();
		SimpleWindow w = new SimpleWindow(600,600, "TwoTurtles");
		
		Turtle t1 = new Turtle(w, 200, 200);
		Turtle t2 = new Turtle(w, 100, 100);
		
		//tar reda på avståndet mellan de två turtles
		double dist = Math.sqrt(Math.pow(t1.getX()-t2.getX(), 2) + Math.pow(t1.getY()-t2.getY(), 2));
		System.out.println(dist);
		
		while (dist >= 50) {
			//turtle ska ta ett steg med slumpmässigt längd (1-10)
			stegL1 = rand.nextInt(9)+1;
			//turtle tar sitt steg
			t1.forward(stegL1);
			//rätning är slumpmässigt [-180 till 180]
			dir1 = rand.nextInt((180 + 180) + 180);
			t1.left(dir1);
			
			//turtle ska ta ett steg med slumpmässigt längd (1-10)
			stegL2 = rand.nextInt(9)+1;
			//turtle tar sitt steg
			t2.forward(stegL2);
			//rätning är slumpmässigt [-180 till 180]
			dir2 = rand.nextInt((180 + 180) + 180);
			t2.left(dir2);
			
		}
		

	}

}
