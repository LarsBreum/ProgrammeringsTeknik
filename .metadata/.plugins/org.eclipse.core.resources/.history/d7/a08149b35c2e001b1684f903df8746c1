					System.out.println(plAttack + " " + plSkill);
					System.out.println("You did damage!");
				} else {
					System.out.println("Sorry you missed...");
					System.out.println(plAttack + " " + plSkill);
				}
			}
			
		//}while(en.getHealth() >= 0 || pl.getHealth() >= 0);
		
	}

}
