import se.lth.cs.pt.maze.Maze;
import se.lth.cs.pt.window.SimpleWindow;


public class Main {

	public static void main(String[] args) {
		SimpleWindow w = new SimpleWindow(600,600, "Maze");
		Maze m = new Maze(1);
		Turtle turtle = new Turtle(w, m.getXEntry(), m.getYEntry());
		System.out.print("Turtle x: " + turtle.getX());
		System.out.print("Turtle y: " + turtle.getY());
		System.out.print("Entry x: " + m.getXEntry());
		System.out.print("entry y: " + m.getYEntry());
		MazeWalker maze = new MazeWalker(turtle);	
		
		
		//draws maze
		m.draw(w);
		
		for(int i = 0; i <= 10; i++) {
			maze.walk(m);
		}
		
	}

}
