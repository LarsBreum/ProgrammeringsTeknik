
import java.util.Random;
import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Player pl1 = new Player(pickCha(sc));
		System.out.println(pl1.getWeapon());
		
	}
	public static int pickCha(Scanner sc){
			
			int pick = sc.nextInt();
				if(pick == 1) {
					pick = 1;
					System.out.println("You chose the Troll!");
				} else if (pick == 2) {
					pick = 2;
					System.out.println("You chose the Man!");
				} else if (pick == 3) {
					pick = 3;
					System.out.println("You chose the elf!");
				} else {
					System.out.println("You can only choose one of those three -try again");
					pick = 0;
				}
			System.out.println("int pick is: " + pick);
			
		return(pick);
		
	}

}
